<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.news.NewsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:title="@string/news_sources"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_categorizes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_business"
                    android:layout_width="175dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/white"
                    android:padding="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_business"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tv_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/business"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/cv_business"
                    app:layout_constraintStart_toStartOf="@+id/cv_business"
                    app:layout_constraintTop_toBottomOf="@+id/cv_business" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_entertainment"
                    android:layout_width="175dp"
                    android:layout_height="125dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@color/white"
                    android:padding="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_entertainment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tv_entertainment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/entertainment"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/cv_entertainment"
                    app:layout_constraintStart_toStartOf="@+id/cv_entertainment"
                    app:layout_constraintTop_toBottomOf="@+id/cv_entertainment" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_general"
                    android:layout_width="175dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/white"
                    android:padding="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_business">

                    <ImageView
                        android:id="@+id/iv_genera"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tv_general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/general"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/cv_general"
                    app:layout_constraintStart_toStartOf="@+id/cv_general"
                    app:layout_constraintTop_toBottomOf="@+id/cv_general" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_health"
                    android:layout_width="175dp"
                    android:layout_height="125dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@color/white"
                    android:padding="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_entertainment">

                    <ImageView
                        android:id="@+id/iv_health"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tv_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/health"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/cv_health"
                    app:layout_constraintStart_toStartOf="@+id/cv_health"
                    app:layout_constraintTop_toBottomOf="@+id/cv_health" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_science"
                    android:layout_width="175dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/white"
                    android:padding="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_general">

                    <ImageView
                        android:id="@+id/iv_science"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tv_science"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/science"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/cv_science"
                    app:layout_constraintStart_toStartOf="@+id/cv_science"
                    app:layout_constraintTop_toBottomOf="@+id/cv_science" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_sports"
                    android:layout_width="175dp"
                    android:layout_height="125dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@color/white"
                    android:padding="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_health">

                    <ImageView
                        android:id="@+id/iv_sports"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tv_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/sports"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/cv_sports"
                    app:layout_constraintStart_toStartOf="@+id/cv_sports"
                    app:layout_constraintTop_toBottomOf="@+id/cv_sports" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_technology"
                    android:layout_width="175dp"
                    android:layout_height="125dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_science"
                    app:layout_constraintVertical_bias="0.22000003">

                    <ImageView
                        android:id="@+id/iv_technology"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tv_technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/technology"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/cv_technology"
                    app:layout_constraintStart_toStartOf="@+id/cv_technology"
                    app:layout_constraintTop_toBottomOf="@+id/cv_technology" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>